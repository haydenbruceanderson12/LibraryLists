@model IEnumerable<Library>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-2">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="">Library Listings</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Library" asp-action="Create"><button class="btn btn-secondary">Create New</button></a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
       
            <th>
                ISBN
            </th>
            <th>
                Options
            </th>
            <th>
                Favorite
            </th>
           

        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td class="m-1">
                    @obj.Title
                </td>
                 <td class="m-1">
                    @obj.Author
                </td>
                <td class="m-1">
                    @obj.ISBN
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                    <a class="btn btn-warning m-1" style="width:45px" asp-controller="Library" asp-action="Edit" asp-route-id="@obj.Id">Edit </a>
                    <a class="btn btn-danger m-1" style="width:45px" asp-controller="Library" asp-action="Delete" asp-route-id="@obj.Id">Delete </a>
                    </div>
                </td>
                <td>
                    <a class="btn btn-success m-1" asp-controller="Library" asp-action="Add" asp-route-id="@obj.Id">Add</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>